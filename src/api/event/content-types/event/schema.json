{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "location": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "datetime"
    },
    "highlight": {
      "type": "component",
      "component": "shared.highlights",
      "repeatable": false
    },
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "mappedBy": "event"
    },
    "thumbnail": {
      "type": "text"
    },
    "ticket_info": {
      "type": "component",
      "component": "shared.ticket-info",
      "repeatable": false
    },
    "tickets": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::ticket.ticket",
      "mappedBy": "event"
    }
  }
}
